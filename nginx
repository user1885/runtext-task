# /etc/nginx/sites/available/runtext

server {
    listen 80;
    server_name localhost;

    location = /favicon.ico { access_log off; log_not_found off; }
    location /static/ {
        root /home/user/runtext;
    }

    location /media/ {
        root /home/user/runtext;   
    }

    location / {
        include proxy_params;
        proxy_pass http://unix:/run/gunicorn.sock;
    }
}